{
    "$schema": "https://raw.githubusercontent.com/googleapis/release-please/main/schemas/config.json",
    "packages": {
        ".": {
            "changelog-path": "CHANGELOG.md",
            "release-type": "simple",
            "changelog-sections": [
                {
                    "type":"feat",
                    "section":"💪 次版本號提升",
                    "hidden":false
                 },
                 {
                    "type":"fix",
                    "section":"🔧 修正錯誤",
                    "hidden":false
                 },
                 {
                    "type":"chore",
                    "section":"🧹 整理專案",
                    "hidden":false
                 },
                 {
                    "type":"ci",
                    "section":"☁️ 工作流程",
                    "hidden":false
                 },
                 {
                    "type":"docs",
                    "section":"📑 文件更新",
                    "hidden":false
                 },
                 {
                    "type":"refactor",
                    "section":"🧰 重構",
                    "hidden":false
                 },
                 {
                    "type":"test",
                    "section":"🧪 測試",
                    "hidden":false
                 },
                 {
                    "type":"mods_feat",
                    "section":"⚡ 新增模組翻譯",
                    "hidden":false
                 },
                 {
                    "type":"mods_update",
                    "section":"🐌 更新模組翻譯",
                    "hidden":false
                 },
                 {
                    "type":"mods_fix",
                    "section":"🐛 修正模組翻譯錯誤",
                    "hidden":false
                 },
                 {
                    "type":"mods_improve",
                    "section":"✨ 提升模組翻譯品質",
                    "hidden":false
                 },
                 {
                    "type":"mods_localize",
                    "section":"🌐 用語在地化",
                    "hidden":false
                 },
                 {
                    "type":"mods_remove",
                    "section":"🧭 移除翻譯",
                    "hidden":false
                 }
            ],
            "pull-request-title-pattern": "chore${scope}: 發佈${component} ${version}",
            "pull-request-header": ":robot: 我建立了發佈 *beep* *boop*",
            "pull-request-footer": "此 PR 由 [Release Please](https://github.com/googleapis/release-please) 自動建立。"
        }
    },
   "label": "自動發佈：待定",
   "release-label": "自動發佈：已發佈"
}